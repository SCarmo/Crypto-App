{
  "manifest_version": 2,

  "name": "Crypto App",
  "description": "Secure your conversations!",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "background":
  {
      "scripts": ["jquery-3.3.1.min.js", "popup.js"]
  },
  "content_scripts": [ {
    "js": [ "jquery-3.3.1.min.js", "popup.js" ],
    "matches": [ "http://*/*", "https://*/*"]
  }]

}