{
  "manifest_version": 2,

  "name": "Crypto App",
  "description": "Secure your conversations!",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "http://*/",
    "https://*/"    
  ],
  "content_scripts": [ {
    "js": [ "jquery-3.3.1.min.js", "sjcl.js", "popup.js" ],
    "matches": [ "*://*.twitter.com/*"]
  }]

}